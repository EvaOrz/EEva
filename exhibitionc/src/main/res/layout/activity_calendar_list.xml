<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/calendar_list_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/left_back"/>

        <ImageView
            android:id="@+id/calendar_list_ditu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/calendar_list_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/map_white"/>

        <TextView
            android:id="@+id/calendar_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/all_zhanlan"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/calendar_list_zhanlan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bowu_white"/>
    </RelativeLayout>

    <cn.com.modernmedia.exhibitioncalendar.view.CommonWebView
        android:id="@+id/list_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>