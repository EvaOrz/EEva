<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/white_10radius_corner_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/app_icon_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/update"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/update_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_14"/>

        <ProgressBar
            android:id="@+id/update_process"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_zanbu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/graylight_3radius_corner_bg"
                android:gravity="center"
                android:padding="7dp"
                android:text="@string/download_later"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                />

            <TextView
                android:id="@+id/update_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graylight_3radius_corner_bg"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"

                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/update_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/red_3radius_corner_bg"
                android:gravity="center"
                android:padding="7dp"
                android:text="@string/download"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>