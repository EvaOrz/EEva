<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/main_bg_lingshi"
                android:fitsSystemWindows="true"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"/>

    <RelativeLayout
        android:id="@+id/main_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/main_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/caidan"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/main_nav_logo"/>

        <ImageView
            android:id="@+id/main_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/touxiang"/>
    </RelativeLayout>

    <cn.com.modernmedia.exhibitioncalendar.view.VerticalViewPager
        android:id="@+id/vertical_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_headview"/>

</RelativeLayout>
