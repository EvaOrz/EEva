<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg_lingshi"
                android:fitsSystemWindows="true"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/main_left"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/caidan"/>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/main_nav_logo"/>

            <ImageView
                android:id="@+id/main_right"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/touxiang"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_weather_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                />

            <TextView
                android:id="@+id/main_weather_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="marquee"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"/>

        </LinearLayout>

        <modernmedia.com.cn.exhibitioncalendar.view.MainCityListScrollView
            android:id="@+id/main_city_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_godown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_line"/>

        <TextView
            android:id="@+id/main_calendar_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4个待参观展览"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/xiahua"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_godown"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="27OCT."
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/main_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="十月二十七日 周二"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/main_date_nongli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丙申年 猴 甲寅月 壬子日"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"/>


    </LinearLayout>


</RelativeLayout>
