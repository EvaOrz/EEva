<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.com.modernmedia.exhibitioncalendar">


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>

    <!-- Include next permission if you want to allow UIL to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="cn.com.modernmedia.exhibitioncalendar.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="cn.com.modernmedia.exhibitioncalendar.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!--登录页面 栈内单例模式-->
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"/>

        <!--全屏广告页面 栈内单例模式-->
        <activity
            android:name=".activity.AdvertisementActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <!--左侧菜单页面-->
        <activity
            android:name=".activity.LeftActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.UserCenterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <!--展览列表页面-->
        <activity
            android:name=".activity.CalendarListActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.AboutActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SettingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SearchActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <!--我的展览页面-->
        <activity
            android:name=".activity.MyListActivity"
            android:screenOrientation="portrait"/>
        <!--展览详情页面-->
        <activity
            android:name=".activity.CalendarDetailActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.ForgetPwdActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.AddActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>